{
    "framework":  "vite",
    "rewrites":  [
                     {
                         "destination":  "https://api.gameforge.app/api/$1",
                         "source":  "/api/(.*)"
                     }
                 ],
    "buildCommand":  "npm run build:production",
    "installCommand":  "npm ci",
    "headers":  [
                    {
                        "headers":  [
                                        {
                                            "key":  "X-Content-Type-Options",
                                            "value":  "nosniff"
                                        },
                                        {
                                            "key":  "X-Frame-Options",
                                            "value":  "DENY"
                                        },
                                        {
                                            "key":  "X-XSS-Protection",
                                            "value":  "1; mode=block"
                                        }
                                    ],
                        "source":  "/(.*)"
                    }
                ],
    "outputDirectory":  "dist",
    "devCommand":  "npm run dev"
}
